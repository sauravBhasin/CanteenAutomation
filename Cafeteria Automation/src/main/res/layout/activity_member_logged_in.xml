<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.project.MemberLoggedInActivity"
    android:id="@+id/myMemberView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/userName"
        android:width="300dp"
        android:text="holdertext"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Today&apos;s Menu:"
        android:id="@+id/textView4"
        android:height="50dp"
        android:fontFamily="@string/abc_action_bar_up_description"
        android:backgroundTint="#9d4d4d"
        android:backgroundTintMode="screen"
        android:layout_below="@+id/TotalPriceText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:paddingTop="8dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/myMenyLV1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:divider="#d3d3d3"
        android:dividerHeight="5px"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rs 0"
        android:id="@+id/TotalPriceText"
        android:height="50dp"
        android:textSize="30dp"
        android:layout_below="@+id/userName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:id="@+id/OrderConfirmButton"
        android:layout_alignBottom="@+id/TotalPriceText"
        android:layout_alignRight="@+id/userName"
        android:layout_alignEnd="@+id/userName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Current Order Details:"
        android:id="@+id/textView6"
        android:layout_below="@+id/myMenyLV1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyListView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myMenyLV1"
        android:divider="#d3d3d3"
        android:dividerHeight="5px"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
